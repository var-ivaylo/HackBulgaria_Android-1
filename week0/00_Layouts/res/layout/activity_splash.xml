<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <Button
        android:id="@+id/task_easy_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/first_task_name" />

    <Button
        android:id="@+id/task_medium_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/second_task_name" />

    <Button
        android:id="@+id/task_hard_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/third_task_name" />

    <Button
        android:id="@+id/task_uber_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fourth_task_name" />

</LinearLayout>